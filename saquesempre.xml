    <integervariable value="0" variable="iItems" />
    <!-- set items and pages -->
    <string.elements string="$(sMenu)" delimiter="|" variablereturn="$(iItems)" />
    <!-- check and validate the index menu -->
    <if variable="$(iIndexMenu)" operator="lessthanorequalto" value="0">
